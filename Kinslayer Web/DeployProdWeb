#!/bin/bash
COMMAND="ant -buildfile ./DeployWeb.xml"

if [ ! -z "$1" ]
then
	if [ "$1" == "trunk" ]
	then
		COMMAND=$COMMAND" -Dbranch=$1"
	else
		COMMAND=$COMMAND" -Dbranch=branches/$1"
	fi
fi

if [ ! -z "$2" ]
then
		COMMAND=$COMMAND" -Drevision=@$2"
fi

COMMAND=$COMMAND" -Dweb-root=/var/www/web"

$COMMAND
